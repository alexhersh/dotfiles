#!/usr/bin/env ruby

def notify( title, msg )
  notifier = File.join "/", "Users", "nathanl", ".dotfiles", "apps",
  "terminal-notifier.app", "Contents", "MacOS", "terminal-notifier"
  system "#{notifier} -title \"#{title}\" -message \"#{msg}\""
end

notify "Update Log", "It's that magical time again"

system "/usr/local/bin/subl -n /Users/nathanl/Documents/github/life/log.rb"